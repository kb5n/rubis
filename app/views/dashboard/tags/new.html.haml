%section.content-header
  %h1 Tag
%section.content
  .box.box-info
    = form_for @tag, url: dashboard_tags_path, html: {class: 'form-horizontal'} do |f|
      .box-header
        = link_to dashboard_tags_url, class: 'btn btn-sm btn-info pull-left' do
          Back
      .box-body
        .form-group{ class: "#{'has-error' if @tag.errors.full_messages_for(:name).any?}" }
          = f.label :name, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.text_field :name, class: 'form-control'
            - @tag.errors.full_messages_for(:name).each do |message|
              %span.help-block= message
        .form-group{ class: "#{'has-error' if @tag.errors.full_messages_for(:identifier).any?}" }
          = f.label :identifier, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.text_field :identifier, class: 'form-control'
            - @tag.errors.full_messages_for(:identifier).each do |message|
              %span.help-block= message

      .box-footer
        = f.submit 'Save', class: 'btn btn-sm btn-success pull-right'
