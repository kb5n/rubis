%section.content-header
  %h1 Category
%section.content
  .box.box-info
    = form_for @category, url: dashboard_categories_path, html: {class: 'form-horizontal'} do |f|
      .box-header
        = link_to dashboard_categories_url, class: 'btn btn-sm btn-info pull-left' do
          Back
      .box-body
        .form-group
          = f.label :id, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.text_field :id, readonly: true, class: 'form-control'
        .form-group
          = f.label :name, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.text_field :name, readonly: true, class: 'form-control'
        .form-group
          = f.label :identifier, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.text_field :identifier, readonly: true, class: 'form-control'
        .form-group
          = f.label :description, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.text_area :description, readonly: true, class: 'form-control'
        .form-group
          = f.label :created_at, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.text_field :created_at, readonly: true, class: 'form-control'
        .form-group
          = f.label :updated_at, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.text_field :updated_at, readonly: true, class: 'form-control'

      .box-footer
