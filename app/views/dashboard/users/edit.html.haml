%section.content-header
  %h1 User
%section.content
  = form_with model: [:dashboard, @user], html: { class: 'form-horizontal' } do |f|
    .box
      .box-header
        = link_to dashboard_user_url, class: 'btn btn-sm btn-info pull-left' do
          = t :back
      .box-body
        .form-group
          = f.label :identifier, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.text_field :identifier, class: 'form-control'
            = render 'dashboard/shared/error_message', item: f.object, column: :identifier
        .form-group
          = f.label :email, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.text_field :email, class: 'form-control'
            = render 'dashboard/shared/error_message', item: f.object, column: :email
        .form-group
          = f.label :name, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.text_field :name, class: 'form-control'
            = render 'dashboard/shared/error_message', item: f.object, column: :name
        .form-group
          = f.label :blog_title, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.text_field :blog_title, class: 'form-control'
            = render 'dashboard/shared/error_message', item: f.object, column: :blog_title
        .form-group
          = f.label :blog_description, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.text_area :blog_description, class: 'form-control'
            = render 'dashboard/shared/error_message', item: f.object, column: :blog_description
        .form-group
          = f.label :blog_started_at, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.text_field :blog_started_at, class: 'form-control pull-right', value: (I18n.l(f.object.blog_started_at) if f.object.blog_started_at.present?)
            = render 'dashboard/shared/error_message', item: f.object, column: :blog_started_at
        .form-group
          = f.label :password, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.password_field :password, class: 'form-control'
            = render 'dashboard/shared/error_message', item: f.object, column: :password
        .form-group
          = f.label :password_confirmation, class: 'col-sm-2 control-label'
          .col-sm-10
            = f.password_field :password_confirmation, class: 'form-control'
            = render 'dashboard/shared/error_message', item: f.object, column: :password_confirmation

      .box-footer
        = f.submit class: 'btn btn-sm btn-success pull-right'
