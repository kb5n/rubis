!!!
%html
  %head
    %meta{ :content => 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type' }/
    %title Dashboard
    = csrf_meta_tags
    = stylesheet_link_tag 'dashboard/application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body.hold-transition.skin-blue.sidebar-mini
    .wrapper
      %header.main-header
        .logo
          %span.logo-mini<>
            %b<>
              D
            b
          %b
            Dashborad
        %nav.navbar.navbar-static-top
          = link_to '', class: 'sidebar-toggle', 'data-toggle': 'offcanvas', role: 'button' do
            %span.sr-only
              Toggle navigation
          .navbar-custom-menu
            %ul.nav.navbar-nav
              %li.dropdown.user.user-menu
                = link_to '#', class: 'dropdown-toggle', 'data-toggle': 'dropdown' do
                  %span.hidden-xs
                    = current_user.name
                %ul.dropdown-menu
                  %li.user-header
                    = image_tag 'http://ed.first-clinic.jp/img/medi/lev/user.png', alt: 'User Image', class: 'img-circle'
                    %p
                      = current_user.name
                  %li.user-footer
                    .pull-left
                      = link_to 'Change Password', '.', class: 'btn btn-default btn-flat'
                    .pull-right
                      = link_to 'Log out', dashboard_logout_path, class: 'btn btn-default btn-flat', method: :post

      %aside.main-sidebar
        %section.sidebar
          %ul.sidebar-menu#tree
            %li.header
              MENU
            %li.treeview.active
              = link_to '#' do
                %i.fa.fa-cubes
                %span
                  Settings
                %span.pull-right-container
                  %i.fa.fa-angle-left.pull-right
              %ul.treeview-menu
                %li
                  = link_to dashboard_site_url(@site) do
                    %i.fa.fa-bookmark-o
                    Site
              %ul.treeview-menu
                %li
                  = link_to dashboard_categories_url do
                    %i.fa.fa-folder-o
                    Categories
              %ul.treeview-menu
                %li
                  = link_to dashboard_tags_url do
                    %i.fa.fa-tags
                    Tags
              %ul.treeview-menu
                %li
                  = link_to dashboard_articles_url do
                    %i.fa.fa-file-text-o
                    Articles

      .content-wrapper
        %section.content
          - flash.each do |type, msg|
            %div{ class: "callout callout-#{type}" }
              = msg
          = yield

      %footer.main-footer
        .pull-right.hidden.xs
          %b
            Version
          0.1
        %strong
          Copyright Â© 2017 All rights reserved.
